rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is a helper
    function isHelper() {
      return request.auth != null && request.auth.token.email.matches('.*@helfer.schuetzenverein.local');
    }
    
    // Helper function to check if user is admin/vorstand
    function isAdmin() {
      return request.auth != null && !request.auth.token.email.matches('.*@helfer.schuetzenverein.local');
    }
    
    // Events - Public read, Admin write
    match /events/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Protocols - Admin only
    match /protocols/{document} {
      allow read, write: if isAdmin();
    }
    
    // Wirte Persons - Helpers and Admins can read/write
    match /wirte-persons/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Wirte Assignments - Helpers and Admins can read/write
    match /wirte-assignments/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Wirte Swaps - Helpers and Admins can read/write
    match /wirte-swaps/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Aufsicht Persons - Helpers and Admins can read/write
    match /aufsicht-persons/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Aufsicht Assignments - Helpers and Admins can read/write
    match /aufsicht-assignments/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Aufsicht Swaps - Helpers and Admins can read/write
    match /aufsicht-swaps/{document} {
      allow read, write: if isHelper() || isAdmin();
    }
    
    // Wirte Notes - Admins can read/write, Helpers can read
    match /wirte-notes/{document} {
      allow read: if isHelper() || isAdmin();
      allow write: if isAdmin();
    }
    
    // Aufsicht Notes - Admins can read/write, Helpers can read
    match /aufsicht-notes/{document} {
      allow read: if isHelper() || isAdmin();
      allow write: if isAdmin();
    }
    
    // Settings - Public read, Admin write (for winter mode and visitor counter)
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin();
      // Allow visitor counter updates from anyone
      allow update: if document == 'visitor-counter' && 
                      request.resource.data.keys().hasOnly(['count']) &&
                      request.resource.data.count is number;
    }
    
    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
